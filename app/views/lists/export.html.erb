<body>
  <div class="jumbotron">
      <div class="container">
        <h1>Lista de livros</h1>
        <h3><%= @list.segmento %></h3>
        <h3><%= "#{@list.escola.nome}" + "-" "#{}" %></h3>
      </div>
  </div>
  
  <div class="container">
    <div class="col-md-6 text-center">
      <% if @list.livros.any? %>
      <table>
        <thead>
          <tr>
            <th colspan="1">Disciplina</th>
            <th colspan="3">Título/Autor/Editora</th>
          </tr>
        </thead>
          <% @list.livros.each do |f| %>
            <tbody>
              <tr>
                      <td class="top_row"></td>
                      <td class="top_row"><bold><%= "#{f.obra}".split.map(&:capitalize)*' ' %></bold></td>
                      <td class="top_row"></td>
                  </tr>
                  <tr>
                      <td class="middle_row"><%= "#{f.disciplina}".split.map(&:capitalize)*' ' %></td>
                      <td class="middle_row"><%= "#{f.autor}".sub('"', '').split.map(&:capitalize)*' ' %></td>
                      <td class="middle_row">
                        <i class="material-icons button delete"></i>
                      </td>
                  </tr>
                  <tr>
                      <td class="bottom_row"></td>
                      <td class="bottom_row"><%= "#{f.selo}".capitalize + ", " + "#{f.volume_serie}" + ", " + "#{f.edicao}" + "ª edição"  %></td>
                      <td class="bottom_row"></td>
                  </tr>
            </tbody>
          <% end %>
      </table>
      <% end %>
      </div>
    </div>
  </div>
</body>
