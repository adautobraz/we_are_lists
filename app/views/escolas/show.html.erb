<div class="jumbotron">
    <div class="container">
      <h2><%= @escola.nome %></h2>
      <h4><%= "#{@escola.endereco}" + ", " + "#{@escola.bairro}"  + " - " + "#{@escola.municipio}" + "/" + "#{@escola.uf}"  %></h4>
      <h5><%= @escola.telefone1 %>
        <% if @escola.telefone2.present? %>
          <%= " / " +  "#{@escola.telefone2}" %>
        <% end %>
      </h5>
      <% unless @escola.site.nil? %>
        <h5><%= "#{@escola.site}"%></h5>
      <% end %>
      <%= link_to 'Editar informações', edit_escola_path(@escola), :class =>' btn btn-danger btn-sm'   %>

    </div>
</div>

<div class="table-container">
  <div clas= "col-md-8 col-md-offset-2">
    <% if @escola.lists.any? %>
      <div class= "col-md-8 col-md-offset-2">
            <% @escola.lists.each do |f| %>
            <div class="table-row">
              <div class= "col-md-6">
                <h3><%= "Lista " + "#{f.serie}" %></h3>
              </div>
              <div class="btn-justified col-md-6 btn-group pull-right">
                <%= link_to 'editar', escola_list_path(@escola, f), class:" btn-sm btn-danger" %>
                <%= link_to 'deletar', escola_list_path(@escola, f),:method => :delete, class:" btn-sm btn-danger" %>
                <%= link_to 'exportar', escola_list_path(@escola, f, :format => :pdf), class:" btn-sm btn-danger" %>
  
              </div>
              </div>

            <% end %>
    
    <% end %>
    <div class="row"><p></p></div>
    <div class="row"><p></p></div>

    <div class="row">
        <div class="text-center">
            <%= link_to 'Criar lista', new_escola_list_path(escola_id: @escola.id), :class =>' btn btn-danger'   %>
        </div>
    </div>
        
    
    
  </div>
  
</div>
 

