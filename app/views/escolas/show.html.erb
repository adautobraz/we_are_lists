<div class="jumbotron">
    <div class="container">
      <h2><%= @escola.nome %></h2>
      <h4><%= "#{@escola.endereco}" + ", " + "#{@escola.bairro}"  + " - " + "#{@escola.municipio}" +  + "/" + "#{@escola.uf}"  %></h4>
      <h5><%= "#{@escola.telefone1}"%></h5>
      <h5><%= "#{@escola.site}"%></h5>
      <%= link_to 'Editar informações', edit_escola_path(@escola), :class =>' btn btn-danger btn-sm'   %>

    </div>
</div>

<div class="container">
  <div clas= "col-md-8 col-md-offset-2">
    <% if @escola.lists.any? %>
      <div class= "col-md-8 col-md-offset-2">
         <div class="row">
            <% @escola.lists.each do |f| %>
            <div class= "col-md-10 vertical-align">
              <h3><%= "Lista " + "#{f.serie}" %></h3>
            </div>
            <div class= "col-md-2">
              <h5><%= link_to 'editar', escola_list_path(@escola, f), class:"btn btn-sm btn-danger" %></h5>
            </div>
            <% end %>
    </div>
    <% end %>
    <div class="row"><p></p></div>
    <div class="row"><p></p></div>

    <div class="row">
        <div class="text-center">
            <%= link_to 'Criar lista', new_escola_list_path(escola_id: @escola.id), :class =>' btn btn-danger'   %>
        </div>
    </div>
        
    
    
  </div>
  
</div>
 

