<% if @escola.errors.any? %>
    <ul>
        <% @escola.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    </ul>
<% end %>

<div class="col-lg-12">
    <div class="container">
        <div class="col-lg-2"><p></p></div>
        <div class="form-log-in-with-email col-lg-8">
            <div class="form-white-background">
                <%= form_for @escola do |f| %>
                
                <div class="form-title-row">
                    <h1>Informações da Escola</h1>
                </div>
                
                <div class="form-row">
                    <label>
                        <span>Nome</span>
                        <%= f.text_field :nome, class:'form-input'  %>
                        <!--<input type="email" name="email">-->
                    </label>
                </div>
                
                <div class="form-row">
                    <label>
                        <span>Endereço</span>
                        <%= f.text_field :endereco, class:'form-input'   %>
                        <!--<input type="email" name="email">-->
                    </label>
                </div>
                
                <div class="form-row">
                    <label>
                        <span>Bairro</span>
                        <%= f.text_field :bairro, class:'form-input'   %>
                        <!--<input type="email" name="email">-->
                    </label>
                </div>
                
                <div class="form-row">
                    <label>
                        <span>Município</span>
                        <%= f.text_field :municipio, class:'form-input'   %>
                        <!--<input type="email" name="email">-->
                    </label>
                </div>
                
                <div class="form-row">
                    <label>
                        <span>UF</span>
                        <%= f.text_field :uf, class:'form-input'   %>
                        <!--<input type="email" name="email">-->
                    </label>
                </div>
    
                <div class="form-row">
                    <label>
                        <span>Telefone 1</span>
                        <%= f.text_field :telefone1, class:'form-input'   %>
                        <!--<input type="email" name="email">-->
                    </label>
                </div>
                
                <div class="form-row">
                    <label>
                        <span>Telefone 2</span>
                        <%= f.text_field :telefone1, class:'form-input'   %>
                        <!--<input type="email" name="email">-->
                    </label>
                </div>
                
                <div class="form-row">
                    <label>
                        <span>Site</span>
                        <%= f.text_field :site, class:'form-input'   %>
                        <!--<input type="email" name="email">-->
                    </label>
                </div>
    
                <div class="form-row">
                    <button type="submit" class="btn btn-danger">Confirmar dados</button>
                </div>
                <% end %>
          </div>
        </div>
        <div class="col-lg-2"><p></p></div>
    </div>
</div>

    